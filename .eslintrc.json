{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": "off",
    
    "max-len": ["error", { "code": 120 }],
    "no-plusplus": "off",

    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "template-curly-spacing": ["error", "always"]
  }
}
